@model provider.faculdade.model.Grade

@{
    ViewBag.Title = "Edit";
}

<h2>Atualizar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Grade</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdDisciplina)

        @Html.HiddenFor(model => model.IdSemestre)

        @Html.HiddenFor(model => model.IdTurma)

        @Html.HiddenFor(model => model.Matricula)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <STRONG>@Html.ActionLink("Voltar", "Index")</STRONG>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
